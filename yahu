<script>
  $(function(){
    var $tabs = $(".tabs li");
    function Carousel(){
      var timer = -1;
      this.start = function(){
      var idx = $tabs.index($tabs.filter(".on"));//得到导航列表已选中列表的索引
      timer = setInterval(function(){
          if(idx == $tabs.length) idx = 0;
          $($tabs.get(idx++)).triggerHandler("mouseover");
        }, 1000);
      };
      this.pause = function(){
        clearInterval(timer);
      }
    }
    var carousel = new Carousel();
      carousel.start();
      $tabs.add(".mod-1 .slide .pics li").hover(function(){
          carousel.pause(); //停止
        },function(){
          carousel.start();//开始
      });

      $(".tabs li").mouseover(function(){
        var $li = $(this);
        setTimeout(function(){
        var idx = $li.index();
        $li.addClass("on").siblings().removeClass("on");
        $($(".pics li")[idx]).show()
          .siblings().hide();
        }, 60); 
      });
  





  });


</script>
